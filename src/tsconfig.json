{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "allowJs": false,
        "removeComments": true,
        "lib": [
            "es6"
        ],
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "types": [ "node", "webpack" ]
    },
    "exclude": [
        "node_modules",
        "**/*.d.ts",
        "**/*.js"
    ],
    "include": [
       "**/*.ts",
    ]
}