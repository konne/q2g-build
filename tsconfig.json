{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./bin",
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "allowJs": false,
        "removeComments": true,
        "lib": [
            "es6"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "./node_modules/*",
        "./node_modules/**/*.d.ts",
    ],
}