{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./bin",
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "allowJs": false,
        "removeComments": true,
        "lib": [
            "es6"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [ "node", "webpack" ]
    },
    "exclude": [
        "node_modules",
        "**/*.d.ts",
    ],
    "include": [
       "**/*.ts"
    ]
}